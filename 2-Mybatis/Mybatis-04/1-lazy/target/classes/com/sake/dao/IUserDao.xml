<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sake.dao.IUserDao">

    <!-- 定义user的resultMap -->
    <!--
        property:实体类的属性
        column：数据库表的列名
     -->
    <resultMap id="userAccountMap" type="com.sake.domain.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="address" column="address"/>
        <result property="sex" column="sex"/>
        <result property="birthday" column="birthday"/>
        <!-- 配置user对象中accounts集合的映射 -->
        <collection property="accounts" ofType="com.sake.domain.Account" select="com.sake.dao.IAccountDao.findAccountByUid">

        </collection>
    </resultMap>

    <!-- 查询所有 -->
    <select id="findAll" resultMap="userAccountMap" parameterType="integer">
        select * from user
    </select>

    <!-- 根据id查询 -->
    <select id="findById" parameterType="int" resultType="com.sake.domain.User">
        select * from user where id=#{uId}
    </select>


</mapper>